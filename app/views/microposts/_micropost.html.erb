<li id="micropost-<%= dom_id(micropost) %>" class= "card hoverable" >
  <blockquote>
    <p>
      <%= link_to gravatar_for(micropost.user), micropost.user %>
    </p>
    <p class="user">
      <%= link_to micropost.user.name, micropost.user %>
    </p>
      <% if micropost.picture? %>
        <%= image_tag micropost.picture.thumb.url, class: "responsive-img"  %>
      <% end %>
      <p>
        <%= micropost.content %>
      </p> 
    <i>
      Post <%= time_ago_in_words(micropost.created_at) %> ago.
    </i>
    <% if !current_user.cannot_destroy?(micropost) %>
      <%= link_to "Delete", micropost, method: :delete, data: { confirm: "You sure?" } %>
    <% end %>
  </blockquote>
</li>